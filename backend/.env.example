# TOMATO Food Delivery - Backend Environment Variables
# Copy this file to .env and fill in your values

# JWT Secret (generate a random string)
JWT_SECRET=your_jwt_secret_here

# Stripe (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here

# Password salt rounds
SALT=10

# MongoDB (get from https://cloud.mongodb.com)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/food-del

# Gemini AI (get from https://ai.google.dev)
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth (get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# Google Maps (get from https://console.cloud.google.com)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email (Gmail - use app password)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM_NAME=TOMATO Food Delivery

# Firebase (optional)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_app.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Cloudinary (optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# App URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:4000
